/* QSplitter handles */
QSplitter::handle {
    background-color: #5a5a5a;
}
QSplitter::handle:hover {
    background-color: #007acc; /* Highlight on hover */
}
QSplitter::handle:horizontal {
    width: 3px;
}
QSplitter::handle:vertical {
    height: 3px;
}

/* QMenuBar */
QMenuBar {
    background-color: #3c3c3c;
    color: #f0f0f0;
}
QMenuBar::item {
    padding: 5px 10px;
    background-color: transparent;
}
QMenuBar::item:selected {
    background-color: #007acc;
}

/* QMenu */
QMenu {
    background-color: #3c3c3c;
    border: 1px solid #5a5a5a;
    color: #f0f0f0;
}
QMenu::item {
    padding: 5px 20px;
}
QMenu::item:selected {
    background-color: #007acc;
}
